{
  "name": "@ablocks/main",
  "type": "module",
  "scripts": {
    "dev": "turbo run x:dev",
    "build": "turbo run x:build",
    "debug": "turbo run x:debug",
    "check": "tsc --build --noEmit",
    "lint:oxlint": "oxlint . --fix --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "x:dev": "vite build --mode dev",
    "x:build": "vite build --mode prod",
    "x:debug": "vite build --mode debug"
  },
  "dependencies": {
    "@ablocks/common": "workspace:*",
    "@scure/base": "catalog:",
    "arg": "catalog:",
    "electron-log": "catalog:",
    "electron-updater": "catalog:",
    "fs-extra": "catalog:",
    "lodash-es": "catalog:",
    "ofetch": "catalog:",
    "serialport": "catalog:",
    "store2": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@tsconfig/node22": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "electron": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all2": "catalog:",
    "oxlint": "catalog:",
    "rolldown-vite": "catalog:",
    "tsx": "catalog:",
