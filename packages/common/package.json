{
  "name": "@ablocks/common",
  "version": "0.1.0",
  "description": "ablocks common",
  "author": "zhoumutou",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./messages": {
      "types": "./dist/messages/index.d.ts",
      "import": "./dist/messages/index.js",
      "require": "./dist/messages/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "tsc --build --noEmit",
    "lint:oxlint": "oxlint . --fix --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "dayjs": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@tsconfig/node22": "catalog:",
    "@types/node": "catalog:",
    "@types/web": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all2": "catalog:",
    "oxlint": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">= 22"
  }
}
