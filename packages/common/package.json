{
  "name": "@ablocks/common",
  "version": "0.1.0",
  "description": "ablocks common",
  "author": "zhoumutou",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./messages": {
      "types": "./dist/messages/index.d.ts",
      "import": "./dist/messages/index.js",
      "require": "./dist/messages/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "tsc --build --noEmit",
    "lint:oxlint": "oxlint . --fix --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.1.0",
    "@types/web": "^0.0.256",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-oxlint": "^1.9.0",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.9.0",
    "tsdown": "^0.13.0",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">= 22"
  }
}
